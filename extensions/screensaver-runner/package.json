{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "screensaver-runner",
  "title": "Screensaver Runner",
  "version": "0.0.1",
  "description": "Shortcut to run the screensaver",
  "icon": "command-icon.png",
  "author": "grga",
  "categories": [
    "System"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "screensaver",
      "title": "Run Screensaver",
      "subtitle": "Screensaver Runner",
      "description": "Run the Mac's screensaver",
      "mode": "no-view"
    },
    {
      "name": "screensaver-mute",
      "title": "Run Screensaver and Mute",
      "subtitle": "Screensaver Runner",
      "description": "Run the Mac's screensaver and mute the system",
      "mode": "no-view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.37.1",
    "run-applescript": "^6.0.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint"
  }
}
